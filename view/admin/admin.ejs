<!-- include header -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="admin.css" />
  </head>
  <body>
    <!-- Header -->
   

    <div>
      <span class="header">
        <p>Awesome Shop| Admin Panel</p>
        <p><a href="/home"> Home</a> | <a href="/logout">Log Out </a></p>
      </span>
    </div>
    <!-- /Header -->
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
      <div class="container">
        <div class="box-nav d-flex justify-between ">
          <p>All Product in stock</p>
          <a href="/add-product" class="border-shadow">
            <span class="text-gradient"
              > <i class="fas fa-plus-circle"></i> Add Product </span>
          </a>
        </div>

        <!-- form handling -->
        <form action="/admin" method="POST">
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Detail</th>
                <th>Instock At</th>
                <th>Category</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < admins.length; i++) { %>
              <tr>
                <td><%= admins[i].name %></td>
                <td><%= admins[i].quantity %></td>
                <td><%= admins[i].price %></td>
                <td><%= admins[i].discount %></td>
                <td><%= admins[i].detail %></td>
                <td><%= admins[i].stock %></td>
                <td><%= admins[i].category %></td>
                <td>
                  <a href="/update-product?id=<%= admins[i]._id%>" class="btn border-shadow update">
                    <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
                </a>
                <a class="btn border-shadow delete" data-id=<%= admins[i]._id%> >
                    <span class="text-gradient"><i class="fas fa-trash-alt"></i></i></span>
                </a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </form>
      </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
      integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg=="
      crossorigin="anonymous"
    ></script>
    <script src="admin.js"></script>
  </body>
</html>
<!-- /include footer -->
